<h1>Mouse Guard For Life</h1>

<section class="form container with-title">
  <div class="field">
    <label for="quantity">Number of Dice</label>
    {{ input value=quantity class="input" id="quantity"}}
    <button {{ action "roll" }} class="btn">Roll</button>
  </div>
</section>

{{#if sortedResults}}
  <section class="container with-title">
    <h2>Results</h2>
    <div class="containers">
      <h4>{{successes}} Successes!</h4>
      {{#each sortedResults as |result|}}
        <div class="container is-rounded">
          {{result.value}}
          {{#if (compare result.value "==" 4)}}
            <i class="icon star"></i>
          {{/if}}
          {{#if (compare result.value "==" 5)}}
            <i class="icon star"></i>
          {{/if}}
          {{#if (compare result.value "==" 6)}}
            <i class="icon star is-large"></i>
          {{/if}}
        </div>
      {{/each}}
    </div>
  </section>
{{/if}}

{{outlet}}
